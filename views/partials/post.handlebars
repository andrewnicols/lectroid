<article id="post-{{slug}}" class="post content{{#if imported}} imported{{/if}}">
    <header class="hd">
        <h1 class="title">
            <a href="{{url}}" rel="bookmark">{{title}}</a>
        </h1>

        <time class="date" datetime="{{date}}" pubdate>
            <a href="{{url}}" rel="bookmark">{{formatDate date}}</a>
        </time>
    </header>

    <div class="bd">
        {{{html}}}
    </div>

    <footer class="ft meta">
        {{#if tags}}
            <ul class="tags">
            {{#tags}}
                <li class="tag"><a href="{{getTagUrl .}}" rel="tag">{{.}}</a></li>
            {{/tags}}
            </ul>
        {{/if}}
    </footer>
</article>
